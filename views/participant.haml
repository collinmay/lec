!!! html5
%html
  %head
    %title LEC Participant View
    %link{:href => "https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", :rel => "stylesheet", :integrity => "sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", :crossorigin => "anonymous"}
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
    %script{:src => "/js/timer.js"}
    %script{:src => "/js/fittext.js"}
    %script{:src => "/js/participant.js"}
  %body
    .container-fluid.mt-5
      .main
        .row.row-cols-1
          .col
            .card.mb-4
              .card-body
                .display-1.text-center.font-monospace#timer 00:00.000
                .d-grid.mt-3
                  .btn-group.btn-group-lg
                    %button.btn.btn-success#timer-done{:disabled => "true", :style => "flex-basis: 0%;"}
                      Done!
            .card.mb-4
              .card-body
                %form#timer-form{:action => "/participant/submit", :method => "POST"}
                  .mb-3
                    %label.form-label{:for => "name"} Full Name
                    %input.form-control{:name => "name", :autocomplete => "name"}
                  .mb-3
                    .form-label Your Time
                    .display-2.text-center.font-monospace#yourtime xx:xx
                    %input#duration{:type => "hidden", :name => "duration"}
                    .d-grid.mt-2
                      .btn-group.btn-group-lg
                        %button.btn.btn-primary#leaderboard-submit{:disabled => "true", :style => "flex-basis: 0%;", :type => "button"}
                          Submit
                        %button.btn.btn-secondary#leaderboard-cancel{:disabled => "true", :style => "flex-basis: 0%;", :type => "button"}
                          Cancel
